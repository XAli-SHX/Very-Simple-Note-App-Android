<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.alishayanpoor.verysimplenoteapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VerySimpleNoteApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.new_note.ViewOrNewNoteActivity"
            android:exported="false"
            android:label="@string/title_activity_new_note"
            android:theme="@style/Theme.VerySimpleNoteApp" />
        <activity
            android:name=".ui.view.list_note.NoteListActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.VerySimpleNoteApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>